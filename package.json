{
  "name": "@tigerlijx/hc-ui",
  "version": "0.0.2",
  "private": false,
  "license": "MIT",
  "description": "A Component Library for Vue.js",
  "main": "packages/cjs/index.js",
  "module": "packages/esm/index.js",
  "unpkg": "packages/hcui.min.js",
  "types": "types/index.d.ts",
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "files": [
    "packages",
    "src",
    "types"
  ],
  "keywords": [
    "vue",
    "ui",
    "components"
  ],
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build:js": "rollup -c && rollup -c --environment MINIFY",
    "build:scss": "sass src/scss/build.scss | node ./build/scss.js > packages/hcui.css && cleancss -o packages/hcui.min.css packages/hcui.css",
    "build:lib": "rimraf packages &&  npm run build:js && npm run build:scss &&  node ./build/staticDist.js",
    "clean": "rimraf packages",
    "publish": "npm publish",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "dependencies": {},
  "peerDependencies": {
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@rollup/plugin-image": "^2.1.1",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/compiler-sfc": "^3.2.31",
    "clean-css-cli": "^5.6.0",
    "core-js": "^3.8.3",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "9.2.1",
    "rollup-plugin-font": "^1.1.2",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-terser": "4.0.4",
    "rollup-plugin-vue": "5.0.0",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "vue": "^2.6.14",
    "vue-template-compiler": "^2.6.14"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
